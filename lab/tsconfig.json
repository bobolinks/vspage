{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": false,
    "typeRoots": [
      "./node_modules/@types/",
      "./node_modules/miniprogram-api-typings",
    ],
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "*.json",
    "*.js",
  ]
}